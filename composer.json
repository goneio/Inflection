{
  "name"       : "matthewbaggett/inflection",
  "description": "A library to allow for pluralisation and singularisation of words programmatically.",
  "authors"    : [
    {
      "name" : "Matthew Baggett",
      "email": "matthew@baggett.me"
    }
  ],
  "replace": {
    "gone.io/inflection": "*",
    "thru.io/inflection": "*"
  },
  "config": {
    "sort-packages": true
  },
  "require": {
    "php": "^7.0 || ^8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.8",
    "squizlabs/php_codesniffer": "^3.0"
  },
  "autoload"   : {
    "psr-4": {
      "MatthewBaggett\\Inflection\\": "src",
      "MatthewBaggett\\Inflection\\Tests\\": "tests"
    }
  }
}
